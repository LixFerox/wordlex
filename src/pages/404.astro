---
import { Icon } from "astro-icon/components";
import Layout from "~/layouts/Layout.astro";
import Footer from "~/sections/Footer.astro";
import CharCard from "~/components/CharCard.astro";
const chars = [
  { char: "e" },
  { char: "r" },
  { char: "r" },
  { char: "o" },
  { char: "r" },
];

const error = [{ char: "4" }, { char: "0" }, { char: "4" }];
---

<Layout title="Wordlex">
  <main>
    <div
      class="max-w-xl mx-auto flex flex-col justify-center my-2 gap-4 text-center lg:px-0 px-4"
    >
      <div class="flex flex-col w-full mb-10">
        <div
          class="flex flex-col items-center gap-1 justify-center text-2xl mt-10 mb-1.5"
        >
          <div class="flex">
            {
              chars.map(({ char }, index) => (
                <CharCard char={char} color="bg-present" index={index} />
              ))
            }
          </div>
          <div class="flex">
            {
              error.map(({ char }, index) => (
                <CharCard
                  char={char}
                  color="bg-correct"
                  index={index + chars.length}
                />
              ))
            }
          </div>
        </div>
        <p class="mt-10 text-lg text-gray-300">
          La p√°gina que buscas no existe
        </p>
        <div class="flex items-center justify-center mt-15">
          <a
            href="/"
            class="flex items-center gap-2 px-6 py-2 rounded-lg hover:brightness-150 transition-all ease-in-out duration-300 border border-gray-200/20 bg-absent/20"
          >
            <Icon name="arrow-left" size={20} />
            <span>Volver al inicio</span>
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
